<style>
html, body {
    max-width: 100%;
    overflow-x: hidden;    
</style>

<script>
  
var products = [];
var cust = [];
var custinfo = [];
var inf;
var infc;
var productlist = [];

function readNfc() {
document.getElementById("nfcinfo").innerHTML = "Scan Product NFC to begin...";
messagedata = document.getElementById("productinfo").innerHTML
        inf = JSON.parse(messagedata);
        productlist = inf.P4.split(",");
        for (i=0;i<productlist.length;i++){
            var label= document.createElement("label");
            var description = document.createTextNode(productlist[i]);
            var checkbox = document.createElement("input");

            checkbox.type = "checkbox";    
            checkbox.name = "productselection";      
            checkbox.value = productlist[i];         

            label.appendChild(checkbox);   
            label.appendChild(description);
            document.getElementById('products').appendChild(label);
        }

  if ('nfc' in navigator) {
    navigator.nfc.watch(function (message) {
        //document.getElementById('nfcinfo').innerHTML = ('NFC API supported!');
        var messagedata = message["records"][0]["data"]
        result = JSON.parse(messagedata); 
        if(result.P1 !== undefined){
            alert("Scanned QR - Product!"+"\n"+messagedata);
            document.getElementById('products').innerHTML = "";
            inf = JSON.parse(messagedata);
            document.getElementById('station') = inf.P2
            productlist = inf.P4.split(",");
            for (i=0;i<productlist.length;i++){
                var label= document.createElement("label");
                var description = document.createTextNode(productlist[i]);
                var checkbox = document.createElement("input");

                checkbox.type = "checkbox";    
                checkbox.name = "productselection";      
                checkbox.value = productlist[i];        

                label.appendChild(checkbox);   
                label.appendChild(description);
                document.getElementById('products').appendChild(label);
            };
            document.getElementById("nfcinfo").innerHTML = "Select product and scan custinfo.";
        };

        if(result.C1 !== undefined){
            alert("Scanned QR -Customer!"+"\n"+messagedata);
            infc = JSON.parse(messagedata);
            custinfo.push(infc.First_Name+"_"+infc.Last_Name);
            document.getElementById("cust").innerHTML=custinfo;
            for (i=0;i<document.getElementsByName("productselection").length;i++){
                if (document.getElementsByName("productselection")[i]=== true){
                cust.push(inf.Product_Name,inf.Country,inf.Division,inf.Division_Head,inf.Div_Email,inf.Div_Mobile,inf.Sales_Manager,inf.Sales_Email,inf.Sales_Mobile,
                    infc.First_Name,infc.Last_Name,infc.Job_Title,infc.Company,infc.Company_Add,infc.Email,infc.Office,infc.Mobile,Date.now().toString(),'#');
                }
            }
            document.getElementById("sendcustomers").value = cust
        };

      }, {mode: 'any'})
  } else {
    document.getElementById('nfcinfo').innerHTML = ('NFC API not supported...');
  }
}  

function clearinfo() {
    //document.getElementById("info").innerHTML="Click to read another code..";
    document.getElementById("products").innerHTML="";
    document.getElementById("cust").innerHTML="";
    products = [];
    cust = [];
    custinfo = [];
    inf = [];
    infc = [];
}
</script>

</head>
<body onload="readNfc();">
