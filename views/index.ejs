<div class="col-xs-4">
    <button style="float: left;" type="button" class="btn" value="0" onclick="clickButton(this)">Clear Data&nbsp</button>
    <button id ="submit" type="submit" style="float: right;" type="button" class="btn btn-success" onclick="clickButton(this)">&nbspSend Data</button>
</div>
<div class="col-xs-4"></div>
</div>


</form>

<div class="row">
<div class="col-xs-3"></div>
<div class="col-xs-6" style="height: 15px;></div>
